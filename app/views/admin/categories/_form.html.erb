<%= simple_form_for([:admin, @category]) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <div class="form-group">
        <div class="mb-30">
          <%= f.input :parent_id, label: t(".category"), collection: options,
            selected: params[:parent_id], include_blank: t(".none") %>
        </div>
      </div>

      <div class="form-group form_product">
        <div class="mb-20">
          <%= f.input :name, label: t(".category_name") %>
        </div>
      </div>

      <div class="form-group form_product">
        <div class="mb-20">
          <%= f.input :description, label: t(".category_description") %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-4 col-md-6 mt-10 mb-30">
          <%= f.submit yield(:button_text), class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
