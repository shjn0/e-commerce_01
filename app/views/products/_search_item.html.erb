<li class="search-item mb-10">
  <%= link_to product do %>
    <div class="col-xs-12 col-sm-3 col-md-3">
      <%= image_tag product.images.first.image_url_url %>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-9">
      <div class="row">
        <strong><%= product.name %></strong>
      </div>
      <div class="row">
        <div class="col-md-8">
          <div class="price">
            <i><%= product.category.name %></i>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
  <% end %>
</li>
