  <div class="clearfix"></div>
  <div class="hom-slider">
    <div class="container">
      <div id="sequence">
        <div class="sequence-prev"><i class="fa fa-angle-left"></i></div>
        <div class="sequence-next"><i class="fa fa-angle-right"></i></div>
        <ul class="sequence-canvas">
          <% @product_promotions.each do |promo| %>
            <li class="animate-in">
              <div class="flat-caption caption1 formLeft delay300 text-center"><span class="suphead"></span></div>
              <div class="flat-caption caption2 formLeft delay400 text-center">
                <h1></h1>
              </div>
              <div class="flat-caption caption3 formLeft delay500 text-center">
                <h5><%= promo.content %></h5>
              </div>
              <div class="flat-button caption4 formLeft delay600 text-center"><%= link_to t(".more_detail"), promo.promotion_details.first.product, class: "more" %></div>
              <div class="flat-image formBottom delay200" data-duration="5" data-bottom="true"><%= link_to(image_tag(promo.promotion_details.first.product.images.first.image_url_url), promo.promotion_details.first.product) %></div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="promotion-banner">
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-sm-4 col-xs-4">
            <div class="promo-box"><%= link_to image_tag "promotion-01.png" %></div>
          </div>
          <div class="col-md-4 col-sm-4 col-xs-4">
            <div class="promo-box"><%= link_to image_tag "promotion-02.png" %></div>
          </div>
          <div class="col-md-4 col-sm-4 col-xs-4">
            <div class="promo-box"><%= link_to image_tag "promotion-03.png" %></div>
          </div>
        </div>
      </div>
    </div>
  </div>  <!-- end hom-slider -->
  <div class="clearfix"></div>
  <div class="container_fullwidth">
    <div class="container">
      <div class="hot-products">
        <h3 class="title"><strong><%= t ".hot" %></strong><%= t ".hot_product" %></h3>
        <ul id="hot">
          <li>
            <div id="slide-owl" class="row">
              <%= render partial: "shared/product", collection: @hot_products,
                as: :product %>
            </div>
          </li>
        </ul>
      </div> <!-- end hot-product -->
      <div class="clearfix"></div>
      <div class="featured-products">
        <div class="col-lg-12">
          <div class="col-lg-3"><h3 class="title"><strong><%= t ".featured" %></strong><%= t ".featured_product" %></h3></div>
          <div class="col-lg-9 filter-price">
            <%= render "shared/filters" %>
          </div>
        </div>
        <ul id="featured">
          <li>
            <div class="row">
              <% if @products.any? %>
                <div class="featured-item">
                  <%= render partial: "shared/product", collection: @products %>
                </div>
                <div class="text-center">
                  <% if @products.all.size > 7 %>
                    <%= link_to t(".load_more"), root_path(@products, page: @products.current_page + Settings.show_more), id: "load-more-posts", remote: true, class: "btn btn-default" %>
                  <% end %>
                </div>
              <% else %>
                <h2 class="title mt-30"><%= t "shared.filters.not_found_product" %></h2>
              <% end %>
            </div>
          </li>
        </ul>
      </div> <!-- end feature-product -->
    </div> <!-- end container(213) -->
  </div> <!-- end container-fullwidth(212) -->
